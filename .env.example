# WordPress Configuration
# Скопируйте этот файл в .env и заполните своими данными

# Данные администратора WordPress
WP_SITE_TITLE=OOR
WP_ADMIN_USERNAME=your_username
WP_ADMIN_PASSWORD=your_strong_password
WP_ADMIN_EMAIL=your_email@example.com

# База данных (из docker-compose.yml)
DB_HOST=db
DB_NAME=wordpress
DB_USER=wordpress
DB_PASSWORD=wordpress
DB_ROOT_PASSWORD=rootpassword

# WordPress настройки
WP_DEBUG=1
WP_URL=http://localhost:8080

# phpMyAdmin
PHPMYADMIN_URL=http://localhost:8081
